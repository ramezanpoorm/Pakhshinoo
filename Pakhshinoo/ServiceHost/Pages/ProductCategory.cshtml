@page "{id}"
@model ServiceHost.Pages.ProductCategoryModel
@{
    ViewData["Title"] = "محصولات";
}

<div class="main-site-wrap">
    <div class="mweb-site-mask"></div>
    <div class="site-wrap-outer clear">
        <div id="container">
            <div id="content" role="main">
                <div class="container">
                    <nav class="products-breadcrumb"><a asp-page="./index">خانه</a>&nbsp;&#47;&nbsp;@Model.ProductCategory.Name</nav>
                    <div class="row is-sidebar-left">
                        <div class="content-wrap col-12 col-sm-12 col-md-12 col-lg-9 content-with-sidebar">
                            <header class="products-products-header block-title">
                                <h1 class="products-products-header__title page-title title"><i class="small fal fa-poll-h"></i>@Model.ProductCategory.Name</h1>
                            </header>

                            <div class="shop-control-bar clear">
                                <div class="products-notices-wrapper"></div>
                                <p class="products-result-count">نمایش دادن همه نتایج</p>
                            </div>

                            <div class="wd_filter_wrap mweb-swiper">
                                <div class="swiper-slider swiper-container" dir='rtl' data-slider="{&quot;slidesPerView&quot;:1,&quot;spaceBetween&quot;:0,&quot;watchSlidesVisibility&quot;:true,&quot;loop&quot;:false,&quot;autoplay&quot;:false,&quot;touchMoveStopPropagation&quot;:true,&quot;breakpoints&quot;:{&quot;575&quot;:{&quot;slidesPerView&quot;:1},&quot;768&quot;:{&quot;slidesPerView&quot;:2},&quot;1024&quot;:{&quot;slidesPerView&quot;:4}}}">
                                    <div class="swiper-wrapper">
                                        <div id="yith-woo-ajax-navigation-stock-on-sale-2" class="widget swiper-slide wd_filter yith-products-ajax-product-filter yith-wcan-stock-on-sale">
                                            <div class="wd_title">موجودی/فروش ویژه<i class="fal fa-plus-circle"></i></div>
                                            <div class="widget-content">
                                                <ul class="yith-wcan-stock-on-sale">
                                                    <li><a href="#" class="yith-wcan-onsale-button">نمایش فقط محصولات "حراج"</a></li>
                                                    <li><a href="#" class="yith-wcan-instock-button">نمایش فقط محصولات "موجود"</a></li>
                                                </ul>
                                            </div>
                                        </div>

                                        <div id="yith-woo-ajax-navigation-sort-by-2" class="widget swiper-slide wd_filter yith-products-ajax-product-filter yith-wcan-sort-by">
                                            <div class="wd_title">ترتیب محصولات: <i class="fal fa-plus-circle"></i></div>
                                            <div class="widget-content">
                                                <ul class="orderby">
                                                    <li class="orderby-wrapper"><a class="orderby-item" href="#">مرتب‌سازی بر اساس محبوبیت</a></li>
                                                    <li class="orderby-wrapper"><a class="orderby-item" href="#">مرتب‌سازی بر اساس امتیاز</a></li>
                                                    <li class="orderby-wrapper"><a class="orderby-item active" href="#">مرتب‌سازی بر اساس آخرین</a></li>
                                                    <li class="orderby-wrapper"><a class="orderby-item" href="#">مرتب‌سازی بر اساس ارزانترین</a></li>
                                                    <li class="orderby-wrapper"><a class="orderby-item" href="#">مرتب‌سازی بر اساس گرانترین</a></li>
                                                    <li class="orderby-wrapper"><a class="orderby-item" href="#">مرتب سازی بر اساس موجودی</a></li>
                                                    <li class="orderby-wrapper"><a class="orderby-item" href="#">مرتب سازی بر اساس پرفروش ترین</a></li>
                                                    <li class="orderby-wrapper"><a class="orderby-item" href="#">مرتب سازی بر اساس به زودی</a></li>
                                                </ul>
                                            </div>
                                        </div>

                                        <div class="swiper-slide" style="display:none">
                                            <div id="yith-woo-ajax-reset-navigation" class="widget wd_filter yith-products-ajax-product-filter yith-woo-ajax-reset-navigation yith-woo-ajax-navigation products widget_layered_nav" style="display:none"></div>
                                        </div>

                                    </div>
                                </div>
                            </div>


                            <ul class="products row columns-4 prdtype_2">

                                @foreach (var products in Model.ProductCategory.Products)
                                {
                                    @if (products.HasDiscount)
                                    {
                                        <li class="item col-12 col-sm-6 col-md-4 col-lg-3 product type-product status-publish instock product_cat-inner-car-interior">
                                            <div class="item-area item_general clear">
                                                <div class="product-image-area">
                                                    <a class="product-image" asp-page="/Product" asp-route-id="@products.Id">
                                                        <div class="product-label label-circle"><div class="circle"></div><span>@products.DiscountRate</span></div>
                                                        <div class="prd_color_list"></div><img src="~/ProductPictures/@products.Picture" />
                                                    </a>
                                                </div>
                                                <div class="product-detail-area">
                                                    <span class="price">
                                                        <del aria-hidden="true">
                                                            <span class="products-Price-amount amount">
                                                                <bdi>@products.Price&nbsp;<span class="products-Price-currencySymbol">تومان</span></bdi>
                                                            </span>
                                                        </del>
                                                        <ins><span class="products-Price-amount amount"><bdi>@products.PriceWithDiscount&nbsp;<span class="products-Price-currencySymbol">تومان</span></bdi></span></ins>
                                                    </span>
                                                    <a asp-page="/Product" asp-route-id="@products.Id" rel="bookmark" title="@products.Name">
                                                        <h2 class="products-loop-product__title">@products.Name</h2>
                                                    </a>
                                                    <div class="actions">
                                                        <ul class="add-to-links">
                                                            <li><div class="add_to_wishlist_wrap"><a href="#" class="add_to_wishlist archive_add_to_wishlist user_logged" title="افزودن به علاقه مندی ها"></a></div></li>
                                                            <li class="compare-button"><a href="#" class="button compare">مقایسه</a></li>
                                                            <li><div class="add-to-cart-wrap"><a href="#" class="button product_type_variable add_to_cart_button">انتخاب گزینه</a></div></li>
                                                        </ul>
                                                    </div>
                                                </div>
                                            </div>
                                        </li>

                                    }
                                    else
                                    {
                                        <li class="item col-12 col-sm-6 col-md-4 col-lg-3 product type-product status-publish instock product_cat-inner-car-interior">
                                            <div class="item-area item_general clear">
                                                <div class="product-image-area">
                                                    <a class="product-image" asp-page="/Product" asp-route-id="@products.Id">
                                                        <img src="~/ProductPictures/@products.Picture" alt="" />
                                                    </a>
                                                </div>
                                                <div class="product-detail-area">
                                                    <span class="price">
                                                        <span class="products-Price-amount amount">
                                                            <bdi>@products.Price&nbsp;<span class="products-Price-currencySymbol">تومان</span></bdi>
                                                        </span>
                                                    </span>
                                                    <a asp-page="/Product" asp-route-id="@products.Id"><h2 class="products-loop-product__title">@products.Name</h2></a>
                                                    <div class="actions">
                                                        <ul class="add-to-links">
                                                            <li><div class="add_to_wishlist_wrap"><a href="#" class="add_to_wishlist archive_add_to_wishlist user_logged" title="افزودن به علاقه مندی ها"></a></div></li>
                                                            <li class="compare-button"><a href="#" class="button compare">مقایسه</a></li>
                                                            <li><div class="add-to-cart-wrap"><a href="#" class="button product_type_variable add_to_cart_button">انتخاب گزینه</a></div></li>
                                                        </ul>
                                                    </div>
                                                </div>
                                            </div>
                                        </li>

                                    }
                                }

                                @*<li class="item col-12 col-sm-6 col-md-4 col-lg-3 product type-product status-publish first outofstock product_cat-inner-car-interior">
            <div class="item-area item_general clear">
                <div class="product-image-area">
                    <a class="product-image" href="#">
                        <div class="out_of_stock"><span>ناموجود</span></div>
                        <img src="img/7654-185x185.jpg" />
                    </a>
                </div>
                <div class="product-detail-area">
                    <span class="price"><p class="null_price"></p></span>
                    <a href="#" rel="bookmark" title="روکش صندلی ماساژ بیورر MG260"><h2 class="products-loop-product__title">روکش صندلی ماساژ بیورر MG260</h2></a>
                    <div class="actions">
                        <ul class="add-to-links">
                            <li><div class="add_to_wishlist_wrap"><a href="#" class="add_to_wishlist archive_add_to_wishlist user_logged" title="افزودن به علاقه مندی ها"></a></div></li>
                            <li class="compare-button"><a href="#" class="button compare">مقایسه</a></li>
                            <li><div class="add-to-cart-wrap"><a href="#" class="button product_type_simple" rel="nofollow">افزودن به سبد</a></div></li>
                        </ul>
                    </div>
                </div>
            </div>
        </li>*@



                            </ul>
                        </div>

                        <div id="sidebar" class="sidebar-wrap col-12 col-sm-12 col-md-12 col-lg-3 clearfix">
                            <div class="mweb-sidebar-sticky">
                                <div class="sidebar-inner">
                                    <aside class="widget products widget_price_filter">
                                        <div class="widget_title">فیلتر براساس قیمت :</div>
                                        <div class="widget-content">
                                            <form method="get" action="#">
                                                <div class="price_slider_wrapper">
                                                    <div class="price_slider" style="display:none;"></div>
                                                    <div class="price_slider_amount" data-step="10">
                                                        <input type="text" id="min_price" name="min_price" value="0" data-min="0" placeholder="حداقل قیمت" />
                                                        <input type="text" id="max_price" name="max_price" value="1120000" data-max="1120000" placeholder="حداکثر قیمت" />
                                                        <button type="submit" class="button">فیلتر</button>
                                                        <div class="price_label" style="display:none;">قیمت: <span class="from"></span> &mdash; <span class="to"></span></div>
                                                        <div class="clear"></div>
                                                    </div>
                                                </div>
                                            </form>

                                        </div>
                                    </aside>

                                    <aside class="widget widget_telegram_wg">
                                        <div>
                                            <a href="#" target="_blank">
                                                <div class="telegram_head"><i class="fab fa-telegram-plane"></i>کانال تلگرام</div>
                                                <div class="telegram_info"><p>اخبار مقالات و تخفیفات گروهی را دنبال کنید</p><span>dinapakhsh</span></div>
                                            </a>
                                        </div>
                                    </aside>

                                    <aside class="widget products widget_product_categories">
                                        <div class="widget_title">دسته های محصولات</div>
                                        <div class="widget-content">
                                            <ul class="product-categories">
                                                <li class="cat-item"><a href="#">تجهیزات بدنه خودرو</a></li>
                                                <li class="cat-item current-cat cat-parent">
                                                    <a href="#">تجهیزات داخلی خودرو</a>
                                                    <ul class="children">
                                                        <li class="cat-item"><a href="#">داشبورد</a></li>
                                                        <li class="cat-item"><a href="#">روکش صندلی</a></li>
                                                        <li class="cat-item"><a href="#">صندلی</a></li>
                                                        <li class="cat-item"><a href="#">کف پایی</a></li>
                                                        <li class="cat-item"><a href="#">کنسول وسط</a></li>
                                                    </ul>
                                                </li>
                                                <li class="cat-item"><a href="#">طرح تخفیف</a></li>
                                                <li class="cat-item"><a href="#">لوازم جانبی و مصرفی</a></li>
                                                <li class="cat-item"><a href="#">مراقبت و نگهداری از خودرو</a></li>
                                            </ul>
                                        </div>
                                    </aside>

                                    <aside class="widget wc_product_categories">
                                        <div class="widget_title">اتوماتیک</div>
                                        <div class="widget-content">
                                            <ul class="product-categories">
                                                <li><a href="#">روکش صندلی</a></li>
                                                <li><a href="#">کنسول وسط</a></li>
                                                <li><a href="#">صندلی</a></li>
                                                <li><a href="#">کف پایی</a></li>
                                                <li><a href="#">داشبورد</a></li>
                                            </ul>
                                        </div>
                                    </aside>

                                    <aside class="widget yith-products-ajax-product-filter yith-woo-ajax-navigation products widget_layered_nav">
                                        <div class="widget_title">رنگ</div>
                                        <div class="widget-content">
                                            <ul class="yith-wcan-color yith-wcan yith-wcan-group">
                                                <li><a style="background-color: #1e73be;" href="#" title="آبی">آبی</a></li>
                                                <li><a style="background-color: #ffda23;" href="#" title="طلایی">طلایی</a></li>
                                                <li><a style="background-color: #dd3333;" href="#" title="قرمز">قرمز</a></li>
                                                <li><a style="background-color: #3d3d3d;" href="#" title="مشکی">مشکی</a></li>
                                                <li><a style="background-color: #d6d6d6;" href="#" title="نقره ای">نقره ای</a></li>
                                            </ul>
                                        </div>
                                    </aside>



                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div><!-- ./ container -->
    </div>
</div><!--#main-site-wrap-->
